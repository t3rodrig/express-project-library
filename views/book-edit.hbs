<form action="/books/edit?bookId={{book._id}}" method="post">
  <div class="form-group">
    <label for="titleBook">Title</label>
    <input type="text" name="title" value="{{book.title}}" class="form-control" id="titleBook">
  </div>

  <div class="form-group">
    <label for="authorBok">Author</label>
    <input type="text" name="author" value="{{book.author}}" class="form-control" id="authorBok">
  </div>

  <div class="form-group">
    <label for="description">Description</label>
    <input type="text" name="description" value="{{book.description}}" class="form-control" id="description">
  </div>

  <div class="form-group">
    <label for="rateBook">Rate</label>
    <input type="number" min="0" max="10" name="rating" value="{{book.rating}}" class="form-control" id="rateBook">
  </div>

  <button type="submit" class="btn btn-primary">EDIT</button>
</form>