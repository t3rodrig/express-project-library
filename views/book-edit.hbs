<form action="/books/edit" method="post">
  <div class="form-group">
    <label for="titleBook">Title</label>
    <input type="text" name="title" class="form-control" id="titleBook">
  </div>

  <div class="form-group">
    <label for="authorBok">Author</label>
    <input type="text" name="author" class="form-control" id="authorBok">
  </div>

  <div class="form-group">
    <label for="description">Description</label>
    <input type="text" name="description" class="form-control" id="description">
  </div>

  <div class="form-group">
    <label for="rateBook">Rate</label>
    <input type="number" min="0" max="10" name="rating" class="form-control" id="rateBook">
  </div>

  <button type="submit" class="btn btn-primary">ADD</button>
</form>