<form action="/authors/add" method="post">
  <div class="form-group">
    <label for="authorName">Name</label>
    <input type="text" name="name" class="form-control" id="authorName">
  </div>

  <div class="form-group">
    <label for="authorLastName">Last Name</label>
    <input type="text" name="lastName" class="form-control" id="authorLastName">
  </div>

  <div class="form-group">
    <label for="authorNationality">Nationality</label>
    <input type="text" name="nationality" class="form-control" id="authorNationality">
  </div>

  <div class="form-group">
    <label for="authorBirthday">Brithday</label>
    <input type="date" name="birthday" class="form-control" id="authorBirthday">
  </div>

  <div class="form-group">
    <label for="pictureUrl">Picture Url</label>
    <input type="text" name="pictureUrl" class="form-control" id="pictureUrl">
  </div>

  <button type="submit" class="btn btn-primary">ADD</button>
</form>